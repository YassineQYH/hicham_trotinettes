{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block content %}
<div class="container py-5" style="max-width: 600px;">
    <h1 class="mb-4 text-center">Modifier mon mot de passe</h1>

    <div class="mb-3 text-center">
        <a href="{{ path('account') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Retourner à mon compte
        </a>
    </div>

    {% if notification %}
        <div class="alert alert-info text-center">{{ notification }}</div>
    {% endif %}

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_row(form.old_password) }}
                {{ form_row(form.new_password.first) }}
                {{ form_row(form.new_password.second) }}

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                </div>
            {{ form_end(form, { render_rest: false }) }}
        </div>
    </div>
</div>
{% endblock %}
