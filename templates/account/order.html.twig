{% extends 'base.html.twig' %}

{% block title %}Mes commandes : Hich-Trott{% endblock %}

{% block content %}
<br><br><br><br><br><br>
<div class="container">
    <h1>Mes commandes</h1>
    C'est dans cet espace que vous allez pouvoir gérer toutes vos commandes.<br>
    <a href="{{ path('account') }}" style="color: blue;">Retour</a>

    {% if orders|length == 0 %}
        <hr>
        <p class="text-center">
            Vous n'avez pas encore passé de commande sur La Boutique SY-Shop.
        </p>
    {% else %}
        <table class="table table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Référence</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Passée le</th>
                    <th scope="col">Livraison</th>
                    <th scope="col">Total Panier</th>
                    <th scope="col">Réduction</th>   {# <<< AJOUT #}
                    <th scope="col">Total Commande</th>
                    <th scope="col" class="text-right">Suivi</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    {% set productsHT = 0 %}
                    {% set productsTTC = 0 %}
                    {% for item in order.orderDetails %}
                        {% set lineHT = item.price * item.quantity %}
                        {% set tvaRate = (item.tva is not empty ? (item.tva / 100) : 0) %}
                        {% set lineTTC = lineHT * (1 + tvaRate) %}
                        {% set productsHT = productsHT + lineHT %}
                        {% set productsTTC = productsTTC + lineTTC %}
                    {% endfor %}

                    {% set promo = order.promoReduction ?? 0 %}  {# <<< AJOUT #}

                    <tr>
                        <td><span class="badge badge-secondary">{{ order.reference }}</span></td>
                        <td>
                            {# ton statut inchangé #}
                        </td>
                        <td>{{ order.createdAt|date('d/m/Y') }}</td>
                        <td>{{ order.carrierPrice|number_format(2, ',', '.') }} €</td>

                        <td>{{ productsTTC|number_format(2, ',', '.') }} €</td>

                        {# <<< NOUVELLE COLONNE #}
                        <td>
                            {% if promo > 0 %}
                                -{{ promo|number_format(2, ',', '.') }} €
                            {% else %}
                                —
                            {% endif %}
                        </td>

                        {# Total Commande TTC APRES PROMO #}
                        <td>{{ (productsTTC - promo + order.carrierPrice)|number_format(2, ',', '.') }} €</td>

                        <td class="text-right">
                            <a href="{{ path('account_order_show', { 'reference': order.reference }) }}" style="color:black;">
                                Voir ma commande
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
    {% endif %}
</div>
<br><br><br><br><br><br>
{% endblock %}
