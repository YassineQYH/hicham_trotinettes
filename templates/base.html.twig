<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA_Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}HichTrott!{% endblock %}</title>

        {% block stylesheets %}
            {# Icones rÃ©seaux sociaux #}
            <link rel="stylesheet" href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" crossorigin="anonymous">

            {# Bootstrap #}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">

            {# AOS #}
            <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

            {# Glidejs #}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.core.css" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.theme.css" />

            {# CSS personnalisÃ©es #}
            <link rel="stylesheet" href="{{ asset('assets/css/cart.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/nav.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/carrousel.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/section.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/product-is-best.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/lightslider.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/login-register.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/contact-form.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/footer.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/invoice.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/slide-img-product-show.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/msg-d-alerte.css') }}">
            {# <link rel="stylesheet" href="{{ asset('assets/css/bpost-label.css') }}"> #}
        {% endblock %}
    </head>

    <body>

        {# ðŸ”” Messages flash au-dessus de la nav #}
        <div class="flash-container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash {{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>

        {# Login overlay #}
        <login>
            {% block login %}
                {{ include('partials/login-register.html.twig') }}
            {% endblock %}
        </login>

        <header>
            {% block menu %}
                {{ include('partials/menu.html.twig') }}
            {% endblock %}

            {# âœ… Messages dâ€™inscription (erreur et succÃ¨s) #}
            {% for message in app.flashes('register_error') %}
                <div class="info-alert register-error">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('register_success') %}
                <div class="info-alert register-success">{{ message }}</div>
            {% endfor %}

            {% block carrousel %}{% endblock %}

            <style>
                .info-alert {
                    padding: 12px 20px;
                    font-weight: bold;
                    text-align: center;
                    margin: 0;
                    font-size: 1rem;
                    animation: fadeInDown 0.6s ease;
                    z-index: 9999;

                    background-color: #fff3cd; /* jaune clair */
                    color: #856404; /* orange foncÃ© */
                    border: 1px solid #ffeeba;
                }

                .register-error {
                    background-color: #fff3cd; /* jaune clair */
                    color: #856404; /* orange foncÃ© */
                    border: 1px solid #ffeeba;
                }

                .register-success {
                    background-color: #d4edda; /* vert clair */
                    color: #155724; /* vert foncÃ© */
                    border: 1px solid #c3e6cb;
                }

                @keyframes fadeInDown {
                    from { opacity: 0; transform: translateY(-20px); }
                    to { opacity: 1; transform: translateY(0); }
                }
            </style>
        </header>

        <main>
            {% block content %}{% endblock %}
        </main>

        <footer id="footer">
            {% block footer %}
                {{ include('partials/footer.html.twig') }}
            {% endblock %}
        </footer>

        <div class="copyrightText">
            <p>Copyright Â© 2021 Yassine Qayouh. All Rights Reserved.</p>
        </div>

        {% block javascripts %}
            {# jQuery #}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

            {# Popper.js et Bootstrap #}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>

            {# Carrousel / Glidejs #}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/glide.min.js"></script>
            <script src="{{ asset('assets/js/slide-product.js') }}"></script>
            <script src="{{ asset('assets/js/lightslider.js') }}"></script>
            <script src="{{ asset('assets/js/slider-show-product.js') }}"></script>

            {# Login / register scripts #}
            <script src="{{ asset('assets/js/script-login-register.js') }}"></script>
            <script src="{{ asset('assets/js/erreur-register.js') }}"></script>
            <script src="{{ asset('assets/js/show-pwd-login.js') }}"></script>
            <script src="{{ asset('assets/js/show-pwd-register.js') }}"></script>

            {# Panier scripts #}
            <script src="{{ asset('assets/js/cart.js') }}"></script>

            {# Mini-panier toggle #}
            <script>
                $(document).ready(function(){
                    // Gestion du mini-panier
                    $('#cart-toggle').click(function(e){
                        e.preventDefault();
                        $('.cart__slide').toggleClass('open');
                    });

                    // Gestion des sous-menus
                    $('ul li').click(function(){
                        $(this).siblings().removeClass('active');
                        $(this).toggleClass('active');
                    });

                    // Afficher/Masquer le mot de passe login
                    $('.show-password-login').on('click', function() {
                        const passwordField = $('#inputPassword');
                        const type = passwordField.attr('type') === 'text' ? 'password' : 'text';
                        passwordField.attr('type', type);
                        $(this).text(type === 'text' ? 'Cacher' : 'Afficher');
                    });

                    // Afficher/Masquer mot de passe register
                    $('.show-password').click(function() {
                        const passwordField = $('#register_password_first');
                        const type = passwordField.attr('type') === 'text' ? 'password' : 'text';
                        passwordField.attr('type', type);
                        $(this).text(type === 'text' ? 'cacher' : 'afficher');
                    });

                    $('.show-password-retype').click(function() {
                        const passwordField = $('#register_password_second');
                        const type = passwordField.attr('type') === 'text' ? 'password' : 'text';
                        passwordField.attr('type', type);
                        $(this).text(type === 'text' ? 'cacher' : 'afficher');
                    });
                });

                // ðŸ”” Ouvrir automatiquement le modal d'inscription si erreur
                document.addEventListener('DOMContentLoaded', function() {
                    {% if app.flashes('register_error') is not empty %}
                        const registerModal = document.querySelector('login');
                        if(registerModal) {
                            registerModal.style.display = 'block';
                        }
                    {% endif %}
                });
            </script>
        {% endblock %}
    </body>
</html>
