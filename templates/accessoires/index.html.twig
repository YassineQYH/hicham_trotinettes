{% extends 'base.html.twig' %}

{% block title %}Nos Accessoirs{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/show-product-slider.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/products.css') }}">
{% endblock %}

{% block content %}

    <section class="section-pergo-list" id="pergo-list">
        <div class="title">
            <h1>Nos Accessoirs</h1>
            <p>Lorem ipsum dolor, sit amet consectetur adipisicing.</p>
        </div>


        <div class="container-pergo-list pergo-list-center">
            {%for item in accessory %}
                <div class="pergo-list-box" data-aos="fade" data-aos-duration="2000">
                    <a href="{{ path('accessoire', { 'slug' : item.slug } ) }}"> <img src="/uploads/accessoires/{{ item.image }}" alt="" /></a>
                    <p>Titre : {{ item.name }}</p>
                </div>
            {% endfor %}
        </div style="color:black;">{{ knp_pagination_render(accessory) }}
    </section>

    <!-- Custom Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
{% endblock %}
